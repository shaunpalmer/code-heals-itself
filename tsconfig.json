{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "declaration": false,
    "sourceMap": false
  },
  "include": [
    "ai-debugging.ts",
    "utils/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "tests",
    "demo",
    "scripts"
  ]
}
